{% extends "base.jinja" %}

{% block title %}Projects{% endblock title %}

{% block body %}
<section class="pt-5 pb-2 text-center container">
  <div class="row pt-lg-5 pb-3">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">My Projects</h1>
      <p class="lead text-body-secondary">Check all of my projects.</p>
      <div class="border-bottom gradient"></div>
    </div>
  </div>
</section>

{% for project in projects_list %}
<div class="container">
  <div class="card my-4">
    <div class="row g-0">
      <div class="col-md-3 zoomout">
        <a href="{{ project['github'] }}"><img src="{{ project['image'] }}" width="300" height="300"
            class="img-fluid rounded-start" alt="Print of the Portfolio Website."></a>
      </div>
      <div class="col-md">
        <div class="card-body">
          <h2 class="card-title fw-bold mb-3">> {{ project['name'] }}</i></h2>
          <ul class="list-group list-group-horizontal-sm list-group-flush my-3">
            {% for language in project['languages'] %}
            <li class="list-group-item">
              {% if icons[language]['source'] == 'outside' %}
              <svg xmlns="http://www.w3.org/2000/svg" class="bi" width="16" height="16" fill="currentColor"
                viewBox="0 0 50 50">
                <path d="{{ icons[language]['path'] }}">
                </path>
              </svg>
              {% endif %}
              {% if icons[language]['source'] == 'bootstrap' %}
              <i class="bi {{ icons[language]['name'] }}"></i>
              {% endif %}
              {{ language }}
            </li>
            {% endfor %}
          </ul>
          <p class="card-text my-2">{{ project['description'] }}</p>
          <div class="col-md mt-5 mb-2">
            <p class="card-text"><small class="float-start text-body-secondary my-2">Last updated in {{ project['date']
                }}</small></p>
            <a href="{{ project['github'] }}" class="card-title float-end btn btn-primary">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-github"
                viewBox="0 0 16 16">
                <path
                  d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8" />
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endfor %}

{% endblock body %}